{
  "name": "signalspot",
  "version": "1.0.0",
  "description": "시그널 - 물리적 공간과 디지털 경험을 결합한 소셜 미디어 플랫폼",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nx serve backend",
    "dev:frontend": "cd apps/frontend && npm start",
    "start:backend": "cd apps/backend && npm run start:dev",
    "start:frontend": "cd apps/frontend && npm start",
    "backend": "cd apps/backend && npm run start:dev",
    "frontend": "cd apps/frontend && npm start",
    "build:backend": "nx build backend --configuration=production",
    "build:frontend": "cd apps/frontend && expo build",
    "install:all": "npm install && cd apps/frontend && npm install",
    "test": "nx test",
    "test:backend": "nx test backend",
    "lint": "nx lint",
    "graph": "nx graph"
  },
  "devDependencies": {
    "@nx/eslint": "21.2.2",
    "@nx/jest": "21.2.2",
    "@nx/js": "^21.2.2",
    "@nx/nest": "^21.2.2",
    "@nx/node": "^21.2.2",
    "@nx/webpack": "^21.3.10",
    "@nx/workspace": "^21.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "concurrently": "^8.2.2",
    "eslint": "^9.8.0",
    "jest": "^29.7.0",
    "nx": "21.2.2",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}
